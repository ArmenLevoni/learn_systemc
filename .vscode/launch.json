{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SystemC Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for lldb",
                    "text": "settings set target.pretty-printing true",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "SystemC - Build",
            "logging": {
                "engineLogging": true
            }
        }
    ]
}
